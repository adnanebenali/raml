			<!-- Donut -->
			<ItemsControl ItemsSource="{Binding Notes}" Foreground="{x:Null}">
				<ItemsControl.ItemTemplate>
					<DataTemplate>
						<Path Stroke="Black" StrokeThickness="1"
							  Fill="{Binding FillColor}"
							  MouseEnter="Path_MouseEnter"
							  MouseLeave="Path_MouseLeave">
							<Path.Data>
								<PathGeometry>
									<PathFigure StartPoint="{Binding OuterStartPoint}">
										<ArcSegment Point="{Binding OuterEndPoint}"
													Size="150,150"
													SweepDirection="Clockwise"
													IsLargeArc="False" />
										<LineSegment Point="{Binding InnerEndPoint}" />
										<ArcSegment Point="{Binding InnerStartPoint}"
													Size="80,80"
													SweepDirection="Counterclockwise"
													IsLargeArc="False" />
										<LineSegment Point="{Binding OuterStartPoint}" />
									</PathFigure>
								</PathGeometry>
							</Path.Data>
						</Path>
					</DataTemplate>
				</ItemsControl.ItemTemplate>
			</ItemsControl>


